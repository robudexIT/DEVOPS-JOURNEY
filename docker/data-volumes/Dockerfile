FROM node

WORKDIR  /app

COPY package.json  /app

RUN npm install

COPY . /app

#SETTING ENVIRONMENT VARIABLES IN DOCKERFILE WHICH MIGHT SECURITY WISE IF ITS IS SENSITIVE INFORMATION
#LIKE CREDINTIALS
ARG DEFAULT_PORT
ENV PORT $DEFAULT_PORT
EXPOSE $PORT

#This is anonymous volume
VOLUME [ "/logs" ]

CMD ["npm", "start"]